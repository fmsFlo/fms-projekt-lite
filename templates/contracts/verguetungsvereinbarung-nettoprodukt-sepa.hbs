        .sepa-label {
            display: inline-block;
            width: 180px;
            font-size: 10pt;
        }
        
        .sepa-value {
            font-weight: bold;
        }
        
        /* Raten-Info Box */
        .installment-info {
            border: 1px solid #000;
            padding: 15px;
            margin: 15px 0;
        }
        
        /* Formular-Bereich */
        .form-field {
            margin: 15px 0;
        }
        
        .form-line {
            border-bottom: 1px solid #000;
