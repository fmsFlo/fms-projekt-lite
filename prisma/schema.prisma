model EinnahmenAusgaben {
  id                String   @id @default(cuid())
  clientId          String
  client            Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  beruf             String?
  nettoEinkommen    Float    @default(0)
  persoenlicheDaten String? // JSON
  fixkosten         String? // JSON
  variableKosten    String? // JSON
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([clientId])
  @@schema("public")
}

model VersicherungsCheck {
  id                   String   @id @default(cuid())
  clientId             String
  client               Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  versicherungen       String? // JSON
  gesamtBeitragVorher  Float    @default(0)
  gesamtBeitragNachher Float    @default(0)
  einsparung           Float    @default(0)
  risikoStatusVorher   String? // 'kritisch' | 'mittel' | 'gut'
  risikoStatusNachher  String? // 'kritisch' | 'mittel' | 'gut'
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@index([clientId])
  @@schema("public")
}

model EmpfehlungsCheck {
  id                        String   @id @default(cuid())
  clientId                  String
  client                    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  empfehlungen              String? // JSON
  gesamtEinsparungMonatlich Float    @default(0)
  gesamtEinsparungJaehrlich Float    @default(0)
  anzahlOptimierungen       Int      @default(0)
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt

  @@index([clientId])
  @@schema("public")
}
